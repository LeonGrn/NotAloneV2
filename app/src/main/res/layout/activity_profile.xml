<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroun"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gobackto"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_back"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView12312"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="#000000"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Guy Afik - Student" />

        <ImageView
            android:id="@+id/imageViewofer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:background="@drawable/guy" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="From Ramat-Gan , 22" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:gravity="top"
            android:text="Self-motivated, responsible, ambitious and hard worker.
                       Want to volunteer with grownup every Sunday in the afternoon"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/create"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:visibility="invisible"
            android:background = "@drawable/ic_roundedbutton"
            android:textStyle="bold"
            android:text="edit" />


    </LinearLayout>
</RelativeLayout>