<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroun"
    tools:context=".SearchActivity">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Welcome, John"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/exittoauthorise"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:background="@drawable/ic_back"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="230dp"
        android:text="Manager"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="138dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="You can search for specific profile"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="200dp">

        <EditText
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="search" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_roundedbutton"
            android:text="GO" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:columnCount="3"
        android:rowCount="10"
        >


        <ImageView
            android:id="@+id/img_search_leon"
            android:layout_width="63dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/leon" />

        <TextView
            android:id="@+id/textView00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leon Grinshpon"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_margin="10dp"
            android:layout_marginRight="50dp"
            />
        <TextView
            android:id="@+id/text_go_to_profile_leon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show information"
            android:textStyle="bold"
            android:background="#2196F3"
            android:textSize="15dp"
            android:layout_margin="10dp"

            />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="63dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/ofer" />

        <TextView
            android:id="@+id/textView100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ofer Drori"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_marginRight="50dp"
            />
        <TextView
            android:id="@+id/text_go_to_profile_ofer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show information"
            android:textStyle="bold"
            android:background="#2196F3"
            android:textSize="15dp"
            android:layout_margin="10dp"

            />




    </GridLayout>


</RelativeLayout>