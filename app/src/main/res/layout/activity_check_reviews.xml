<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroun"
    android:layout_height="match_parent"
    tools:context=".CheckReviews">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Welcome, John"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/backtoAuthorie"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:background="@drawable/ic_back"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="230dp"
        android:text="Manager"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="search" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_roundedbutton"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="GO" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:columnCount="6"
        android:rowCount="10"
        >


        <ImageView
            android:id="@+id/img_search_leon"
            android:layout_width="30dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/leon" />

        <TextView
            android:id="@+id/textView00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leon"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_margin="5dp"

            />

        <TextView
            android:id="@+id/text_go_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Waiting to my scolership"
            android:layout_margin="5dp"
            android:textSize="10dp"></TextView>
        <TextView
            android:id="@+id/text_go_to_full_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="Read more"
            android:background="#2196F3"
            android:textSize="10dp"></TextView>
        <TextView
            android:id="@+id/text_go_to_delete"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Delete"
            android:background="#F30A0A"
            android:textSize="10dp"></TextView>
        <TextView
            android:id="@+id/text_go_to_profile_leon"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="01/22/2020"
            android:textSize="10dp"></TextView>



        <ImageView
            android:id="@+id/img_search_leeeon"
            android:layout_width="30dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/leon" />

        <TextView
            android:id="@+id/textVieeew00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leon"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_margin="5dp"

            />

        <TextView
            android:id="@+id/text_go_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Not satisfied with the service"
            android:layout_margin="5dp"
            android:textSize="10dp"></TextView>
        <TextView
            android:id="@+id/text_go_to_full_message2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:text="Read more"
            android:background="#2196F3"
            android:textSize="10dp"></TextView>
        <TextView
            android:id="@+id/text_go_to_delete2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:text="Delete"
            android:background="#F30A0A"
            android:textSize="10dp"></TextView>
        <TextView
            android:id="@+id/text_go_to_prn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:text="01/21/2020"
            android:textSize="10dp"></TextView>









    </GridLayout>


</RelativeLayout>